@model IEnumerable<ERP_IMR.Models.Deneme.BSMIMRBOMHEADCONTENT>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h4 {
        text-align: center;
        color: brown;
    }
</style>
<h4>Ürün Ağacı Ana Tablosu - BOM001</h4>

<p>
    <a asp-action="Create" title="Create">
        <i class="fa fa-plus"></i>
    </a>
</p>
<div class="box" style="border: 2px solid brown; border-radius: 5px; padding: 15px; position: relative;">
    <button onclick="window.location.href='@Url.Action("Index", "Deneme")';"
