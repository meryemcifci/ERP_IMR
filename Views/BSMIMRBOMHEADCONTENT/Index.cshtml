        &times;
    </button>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.COMCODE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BOMDOCTYPE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BOMDOCFROM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BOMDOCUNTIL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MATDOCTYPE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MATDOCNUM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QUANTITY)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ISDELETED)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ISPASSIVE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DRAWNUM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CONTENTNUM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.COMPONENT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.COMPBOMDOCTYPE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.COMPBOMDOCNUM)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.COMCODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BOMDOCTYPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BOMDOCFROM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BOMDOCUNTIL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MATDOCTYPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MATDOCNUM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QUANTITY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISDELETED)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISPASSIVE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DRAWNUM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CONTENTNUM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COMPONENT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COMPBOMDOCTYPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COMPBOMDOCNUM)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BOMDOCNUM">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BOMDOCNUM">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BOMDOCNUM">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
