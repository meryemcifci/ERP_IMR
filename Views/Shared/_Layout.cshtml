<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMR_ERP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IMR_ERP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            margin: 0;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .navbar-custom {
            background-color: #83343f; /* Üst menü rengi */
            color: white;
        }

        .sidebar {
            height: calc(100vh - 56px); /* Navbar yüksekliğini çıkar */
            width: 160px;
            position: fixed;
            top: 56px; /* Navbar yüksekliği */
            left: 0;
            background-color: #83343f; /* Yan menü rengi */
            color: white;
            display: flex;
            flex-direction: column;
            padding-top: 20px; /* Yukarıdan boşluk bırak */
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                margin: 10px 20px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #a64e60;
                    border-radius: 5px;
                    padding: 5px;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="#">
                    <img src="logo1.jpg" alt="Logo" width="130" height="25" class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <form asp-action="Search" method="get" class="d-flex align-items-center me-3">
                            <input type="text" name="query" class="form-control form-control-sm me-2" placeholder="Arama Yapabilirsiniz..." style="width: 200px;" />
                            <button type="submit" class="btn-sm" style="background-color: #83343f; color: white; border:none;">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#"><i class="fa fa-bell"></i></a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar">
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">ANA SAYFA</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Main" asp-action="Index">ANA</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Support" asp-action="Index">KONTROL</a>
    </div>

    <main class="container" style="margin-left: 260px; padding: 20px; margin-top: 56px;">
        @RenderBody()
    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>