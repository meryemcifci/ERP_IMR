@{
    ViewData["Title"] = "MATGetJoinedData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Malzeme Bilgileri</h1>
@model List<ERP_IMR.ViewModels.MalzemeViewModel>
<style>
    h4{
        text-align:center;
        color:brown;
    }
</style>
<h4>Malzeme Kartları - MAT</h4>
<!-- Yeni Ekleme Butonu -->
<a href="@Url.Action("Create", "MAT")" class="btn btn-success btn-sm mt-3">
    <i class="fas fa-plus"></i>
</a>
<table class="table">
    <thead>
        <tr>
            <th>Firma Kodu</th>
            <th>Malzeme Tipi</th>
            <th>Malzeme Kodu</th>
            <th>
                Geçerlilik Başlangıç
            </th>
            <th>
                Geçerlilik Bitiş
            </th>
            <th>
                Dil Kodu
            </th>
            <th>
                Malzeme Kısa Açıklaması
            </th>
            <th>
                Malzeme Uzun Açıklaması
            </th>
            <th>
                Tedarik Tipi
            </th>
            <th>
                Ürün Ağacı Var Mı?
            </th>
            <th>
                Rota Var Mı?
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.COMCODE</td>
                <td>@item.MATDOCTYPE</td>
                <td>@item.MATDOCNUM</td>
                <td>@item.MATDOCFROM</td>
                <td>@item.MATDOCUNTIL</td>
                <td>@item.LANCODE</td>
                <td>@item.MATSTEXT</td>
                <td>@item.MATLTEXT</td>
                <td>@item.SUPPLYTYPE</td>
                <td>@item.ISBOM</td>
                <td>@item.ISROUTE</td>
                <td>
                    <!-- Detay Butonu -->
                    <a href="@Url.Action("Detail", "Main", new { id = item.COMCODE })" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <!-- Düzenleme Butonu -->
                    <a href="@Url.Action("Edit", "Main", new { id = item.COMCODE })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <!-- Silme Butonu -->
                    <form action="@Url.Action("Delete", "Main", new { id = item.COMCODE })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
