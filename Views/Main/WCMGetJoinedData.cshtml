
@{
    ViewData["Title"] = "WCMGetJoinedData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>İş Merkezi</h1>
@model List<ERP_IMR.ViewModels.İşMerkeziViewModel>
<style>
    h4 {
        text-align: center;
        color: brown;
    }
</style>
<h4>İş Merkezi Kartları-WCM</h4>
<!-- Yeni Ekleme Butonu -->
<a href="@Url.Action("Create", "WCM")" class="btn btn-success btn-sm mt-3">
    <i class="fas fa-plus"></i>
</a>
<table class="table">
    <thead>
        <tr>
            <th>Firma Kodu</th>
            <th>İş Merkezi Tipi</th>
            <th>İş Merkezi Kodu</th>
            <th>
                Geçerlilik Başlangıç
            </th>
            <th>
                Geçerlilik Bitiş
            </th>
            <th>
                Ana İş Merkezi Tipi

            </th>
            <th>
                Ana İş Merkezi Kodu

            </th>
            <th>
                Maliyet Merkezi Tipi

            </th>
            <th>
                Maliyet Merkezi Kodu

            </th>
            <th>
                Günlük Çalışma Süresi (Saat)

            </th>
            <th>
                Silindi?
            </th>
            <th>
                Pasif mi?
            </th>
            <th>
                İş Merkezi Kısa Açıklaması
            </th>
            <th>
                Operasyon Kodu
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.COMCODE</td>
                <td>
                    @item.WCMDOCTYPE
                </td>
                <td>
                    @item.WCMDOCNUM
                </td>
                <td>
                    @item.WCMDOCFROM
                </td>
                <td>@item.WCMDOCUNTIL</td>
                <td>
                    @item.WCMDOCUNTIL
                </td>
                <td>
                    @item.MAINWCMDOCTYPE
                </td>
                <td>
                    @item.MAINWCMDOCNUM
                </td>
                <td>
                    @item.CCMDOCTYPE
                </td>
                <td>
                    @item.CCMDOCNUM
                </td>
                <td>
                    @item.WORKTIME
                </td>
                <td>
                    @item.ISDELETED

                </td>
                <td>
                    @item.ISPASSIVE

                </td>
                <td>
                    @item.WCMSTEXT

                </td>
                <td>
                    @item.OPRDOCTYPE

                </td>
                <td>
                    <!-- Detay Butonu -->
                    <a href="@Url.Action("Detail", "Main", new { id = item.COMCODE })" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    <!-- Düzenleme Butonu -->
                    <a href="@Url.Action("Edit", "Main", new { id = item.COMCODE })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <!-- Silme Butonu -->
                    <form action="@Url.Action("Delete", "Main", new { id = item.COMCODE })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


